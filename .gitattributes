# Set default behavior to automatically normalize line endings.
* text=auto

# Force LF line endings for all text files
*.py text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.html text eol=lf
*.css text eol=lf
*.xml text eol=lf
*.sh text eol=lf
*.bat text eol=crlf

# Makefile should use LF
Makefile text eol=lf
makefile text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.pre-commit-config.yaml text eol=lf

# Binary files (explicitly marked to prevent text processing)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
__pycache__/ binary

# IDE and editor files
*.code-workspace text eol=lf
*.vscode text eol=lf

# Documentation
*.rst text eol=lf
LICENSE text eol=lf
CHANGELOG* text eol=lf
README* text eol=lf
CLAUDE.md text eol=lf

# Package files
requirements*.txt text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
pyproject.toml text eol=lf
